.component-block
    display grid
    grid-template-columns 2fr 1fr
    grid-column-gap 30px
    overflow hidden
    margin 2em 0 0 0
    .example-block
        overflow hidden
        &:hover
            transition .2s all ease-in-out
    .code-block
        position relative
        border 1px solid #cbcbcb
        border-radius 4px
        figcaption
            position absolute
            top 0
            left 0
            padding 2px 8px
            border 0
            background #f5f5f5
            border-radius 4px 0 4px 0
        .copy-text-icon
            position absolute
            top 5px
            right 5px
            opacity 0.4
            &:hover
                cursor pointer
                opacity 1
            svg
                width 25px
            &:after
                display block
        pre
            border 0
            border-radius 4px 4px 4px 4px
            padding 0
            min-height 100%
            code
                display block
                padding 1rem
                padding-top 0
                word-wrap normal