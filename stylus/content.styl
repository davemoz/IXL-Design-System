.component-block
    display grid
    grid-template-columns 2fr 1fr
    grid-column-gap 30px
    overflow hidden
    margin 2em 0 0 0
    .example-block
        overflow hidden
        display flex
        &:hover
            transition .2s all ease-in-out
        .example-component
            background #ccc
            color: rgb(175, 175, 175)
            display flex
            justify-content center            
            align-items center
            width 100%
            border-radius 4px
    .code-block
        position relative
        margin 0
        figcaption
            position absolute
            top 0
            left 0
            padding 2px 8px
            border 0
            background #f5f5f5
            border-radius 4px 0 4px 0
            z-index 99
        .copy-text-icon
            position absolute
            top 5px
            right 5px
            opacity 0.4
            z-index 99
            &:hover
                cursor pointer
                opacity 1
            svg
                width 25px
            &:after
                display block
        pre
            border 0
            border-radius 4px 4px 4px 4px
            padding 1rem 0
            min-height 100%
            margin 0
            code
                display block
                padding 0 1rem 1rem 4rem
                word-wrap normal
                box-shadow none
                &:focus
                    outline none
        pre[class*=language-]:after, pre[class*=language-]:before
            display none